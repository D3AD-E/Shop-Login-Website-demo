<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    
</head>
<body>
    {{>header}}
    {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
    {{/if}}
    {{#if success}}
    <div class="alert alert-success">{{success}}</div>
    {{/if}}
    {{#each products}}
    <div class="row">
        {{#each this}}
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="{{this.imagePath}}" alt="..." class="img-responsive" />
                <div class="caption">
                    <h3>{{this.title}}</h3>
                    <div class="description">
                        {{this.description}}
                    </div>
                    <div class="clearfix">
                        <div class="price pull-left">{{this.price}} coins</div>
                        <a href="/shop/add-to-cart/{{this._id}}" class="btn btn-default pull-right" role="button">Add to cart</a>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/each}}
</body>
</html>